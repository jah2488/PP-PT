<%= simple_form_for([project, @task ||= Task.new]) do |f| %>
  <fieldset>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :project_id, :as => :hidden, :input_html => { :value => project.id } %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :completed %>
      <%= f.input :in_progress %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </fieldset>
<% end %>
