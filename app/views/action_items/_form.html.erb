<%= simple_form_for(@action_item) do |f| %>
  <fieldset>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :completed %>
    <%= f.input :in_progress %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  </fieldset>
<% end %>
